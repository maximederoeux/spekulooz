<!-- MODAL CONTACT START -->

<div class="modal fade" id="modify_contact_<%= @sub_account.id %>" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">

      <%= simple_form_for(@sub_account) do |f| %>
        <%= f.error_notification %>

        <div class="modal-body modal-body-account">

          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
          </button>

			    <div class="row">
			    	<div class="col-md-12">
			      <%= f.input :resto_name, label: false, :placeholder => t('account.resto_name') %>			    		
			    	</div>
			    	<div class="col-md-6">
			    		<%= f.input :address, label: false, :placeholder => t('account.address') %>
					   	<%= f.input :city, label: false, :placeholder => t('account.city') %>
					    <div class="row">
					    	<div class="col-md-6">							    		
					    		<%= f.input :zipcode, label: false, :placeholder => t('account.zipcode') %>
					    	</div>
					    	<div class="col-md-6">
					    		<%= f.select :country, @countries, {prompt: false}, {class: "form-country more-padding"} %>
					    	</div>
					    </div>
					  </div>

			    	<div class="col-md-6">
			    		<%= f.input :phone, label: false, :placeholder => t('account.phone') %>

			    		<%= f.input :fax, label: false, :placeholder => t('account.fax') %>

			    		<%= f.input :mobile, label: false, :placeholder => t('account.mobile') %>
	
			    		<%= f.input :email, label: false, :placeholder => t('account.email') %>
			    	</div>

			    		<% if @sub_account.active == nil %>

			    			<%= f.hidden_field :active, :value => true %>

			    		<% end %>


			    		<%= f.submit t('word.update'), class: "btn btn-save-contact-first" %>
      				<% end %>
			    	</div>
			  </div>	
  	</div>
	</div>
</div>

<!-- MODAL CONTACT END -->

<!-- MODAL MENU START -->

<div class="modal fade" id="show_main_menu" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">

      

        <div class="modal-body">
            <%= simple_form_for(@sub_account.menus.is_main.first) do |f| %>
              <%= f.error_notification %>

                    <%= f.hidden_field :active, :value => true %>

                    <%= f.submit t('menu.show'), class: "btn btn-block btn-save-item" %>

					    
      				<% end %>
		
			  </div>	
  	</div>
	</div>
</div>

<!-- MODAL MENU END -->