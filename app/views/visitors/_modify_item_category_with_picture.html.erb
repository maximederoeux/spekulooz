<!-- Large modal -->
<button type="button" class="btn btn-modify-item-category-picture" data-toggle="modal" data-target="#modify_item_category_with_picture_<%= item_category.id %>">

  <img src="assets/price.png" style="max-width:50%;">


</button>

<div class="modal fade" id="modify_item_category_with_picture_<%= item_category.id %>" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">

      <%= simple_form_for(item_category) do |f| %>
        <%= f.error_notification %>

        <div class="modal-body">

          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
          </button>

						<%= f.collection_select :category_id, @categories, :id, :name, {prompt: true, include_blank: false}, class: "form-control styled-select" %>
						
					    <%= f.input :price %>

			    		<%= f.submit t('word.update'), class: "btn btn-save-contact" %>
      				<% end %>
			    

			  </div>	




  	</div>
	</div>
</div>
