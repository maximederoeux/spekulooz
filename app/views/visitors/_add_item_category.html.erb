<!-- Large modal -->
<button type="button" class="btn btn-item" data-toggle="modal" data-target="#new_item_category">

  <img src="assets/price.png" style="max-width:50%;">


</button>

<div class="modal fade" id="new_item_category" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">

      <%= simple_form_for(@new_item_category) do |f| %>
        <%= f.error_notification %>

        <div class="modal-body">

          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
          </button>

						<%= f.collection_select :category_id, @categories, :id, :name, {prompt: true, include_blank: false}, class: "form-control styled-select" %>
					    <%= f.input :price %>

					    <%= f.hidden_field :food, :value => true %>
					    <%= f.hidden_field :item_id, :value => @sub_account.items.last.id %>

			    		<%= f.submit t('word.update'), class: "btn btn-save-contact" %>
      				<% end %>
			    

			  </div>	




  	</div>
	</div>
</div>
