<button type="button" class="btn btn-modify-item-picture" data-toggle="modal" data-target="#modify_item_with_picture_<%= item.id %>">

  <img src="/assets/edit.png" style="max-width:50%;">


</button>

<div class="modal fade" id="modify_item_with_picture_<%= item.id %>" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">



        <div class="modal-body">

          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
          </button>


            <%= simple_form_for(item) do |f| %>
              <%= f.error_notification %>

              <div class="row">
                <div class="col-md-12">
                  <%= f.input :name %>
                </div>
                <div class="col-md-12">
                  <%= f.input :description %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <%= f.input :active %>
                  <%= f.input :start_date %>
                  <%= f.input :end_date %>
                </div>
                <div class="col-md-6">
                  <div class="add-item-file">
                    <%= f.input :picture, as: :file, class: "show-for-sr", label: false %>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <% if item.picture.present? %>
                        <%= image_tag item.picture.url(:thumb) %>
                      <% end %>
                    </div>
                    <div class="col-md-6">
                      <%= f.submit t('word.update'), class: "btn btn-save-item" %>
                    </div>
                  </div>   
                </div>              
              </div>              
              
              <% end %>           
			    

			  </div>	




  	</div>
	</div>
</div>
