<% if user_signed_in? %>

  <nav>
    <ul class="spekulooz-page">
      <li class="spekulooz-left"><%= link_to "Spekulooz", root_path %></li>
      <li class="spekulooz-right"><%= link_to_unless_current "EN", locale: "en" %></li>
      <li class="spekulooz-right"><%= link_to_unless_current "FR", locale: "fr" %></li>
      <li class="spekulooz-right"><%= link_to_unless_current "NL", locale: "nl" %></li>

        <% if user_signed_in? %>
          <li class="spekulooz-left"><%= link_to "Mon profil", user_path(current_user) %></li>
          <li class="spekulooz-left"><%= link_to "Modifier", edit_user_path(current_user) %></li>
          <li class="spekulooz-right"><%= link_to "Déconnexion", destroy_user_session_path, :method=>'delete' %></li>
        <% else %>
          <li class="spekulooz-right"><%= link_to "Inscription", new_user_registration_path %></li>
          <li class="spekulooz-right"><%= link_to "Connexion", new_user_session_path %></li>
        <% end %>
    </ul> 
  </nav>

<% end %>


<nav>
  <ul class="main-page">
    <li class="pull-left"><%= link_to "#{@sub_account.resto_name}", root_path %></li>
    <li class="pull-right"><%= link_to_unless_current "EN", locale: "en" %></li>
    <li class="pull-right"><%= link_to_unless_current "FR", locale: "fr" %></li>
    <li class="pull-right"><%= link_to_unless_current "NL", locale: "nl" %></li>
      <% if user_signed_in? %>

        <% if user_signed_in? && current_user.id == @sub_account.user_id %>
  
          <% if @sub_account.address.blank? %>

            <%= render 'visitors/modify_contact' %>

          <% else %>

            <% unless @sub_account.menus.is_main.first.active == true %>

              <%= render 'visitors/menu_main_show' %>

            <% end %>
            
          <% end %>
          

        <% end %>


        <li class="pull-right"><%= link_to "Réservation", root_path %></li>

        <li class="pull-right"><%= link_to "Galerie", root_path %></li>
        <li class="pull-right"><%= link_to "Suggestions", root_path %></li>
        <li class="pull-right"><%= link_to "Menu", menus_path %></li>

      <% else %>
        <li class="pull-right"><%= link_to "Menu", menus_path %></li>
        <li class="pull-right"><%= link_to "Réservation", root_path %></li>
        <li class="pull-right"><%= link_to "Connexion", new_user_session_path %></li>
        <li class="pull-right"><%= link_to "Suggestions", root_path %></li>
        <li class="pull-right"><%= link_to "Galerie", root_path %></li>
      <% end %>
  </ul> 
</nav>





