<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :active %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :price_one %>
    <%= f.input :price_two %>
    <%= f.input :food %>
    <%= f.input :drink %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>