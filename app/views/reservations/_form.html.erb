<%= simple_form_for(@reservation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :account_id %>
    <%= f.input :requested_time %>
    <%= f.input :pax %>
    <%= f.input :email %>
    <%= f.input :mobile %>
    <%= f.input :comment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
